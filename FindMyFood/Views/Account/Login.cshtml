@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Logowanie";
}

<header class="masthead">
    <div class="container h-100">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" timeout="2880000">
            <div class="col-md-offset-3 col-md-5 float-left">
                <section class="section-no-bottom">
                    <h3>Logowanie</h3>
                </section>
                <hr class="invisible"/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block">Zaloguj się</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Nie masz konta? Zarejestruj się</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</header>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}